generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  firstName String
  secondName String
  bornDate DateTime
  adress String
  email String @unique
  password String
  cpf String  @unique
  rg String @unique
  phoneNumber String
  banckAccont String 
  banckAgency String
  credityCard String
  cvc String
  validDate String
  buy Buy[]

  @@map("User")
}

model Buy{
  buyId String @id @default(uuid())
  userName  String
  userEmail String
  userId  String
  userCPF  String
  user_id User @relation(fields: [userId], references: [id])
  productID String
  productTitle String
  productPrice Float
  discount Float
  finalValue Float
  day DateTime

  @@map("Buy")
}
